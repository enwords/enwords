.container
  = render 'layouts/locale_switcher'
  .row
    - if user_signed_in?
      - if current_user.learning_language.blank?
        = render 'static/select_languages'
      - else
        .col-12
          h1.main--title == t 'static.index.sign_in.title'
          br
          ul.main--list
            li == t 'static.index.sign_in.item_1.text', words_path: words_path(status: 'unknown')
            li == t 'static.index.sign_in.item_2.text', articles_path: articles_path
            li == t 'static.index.sign_in.item_3.text'
            - if body_class == 'eng-rus'
              li == t 'static.index.sign_in.item_4.text', skyeng_setting_path: actual_skyeng_setting_path

    - else
      .col-12
        h3 == t 'static.index.sign_out.item1.text'
        br
        h4 == t 'static.index.sign_out.item2.text'
      .col-12.mt-2
        = render 'devise/registrations/form'
