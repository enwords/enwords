<div class="container">
  <div class="row row-content">
    <div class="col-xs-12">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3 wrapper">
        <h2 class="form-signin-heading">Настройки пользователя</h2>
        <%= form_for(resource, as: resource_name, url: update_user_registration_path, html: {method: :put}) do |f| %>

            <div class="col-xs-12 error">
              <p><%= devise_error_messages! %> </p>
            </div>

            <div class="field">
              <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: "Почта" %>
              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                  <div>Все еще ждем поддтверждения для: <%= resource.unconfirmed_email %></div>
              <% end %>
            </div>

            <div class="field">
              <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: "Новый пароль" %>
            </div>

            <div class="field">
              <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: "Повторите пароль" %>
            </div>

            <div class="field">
              <%= f.password_field :current_password, autocomplete: "off", class: 'form-control', placeholder: "Текущий пароль (обязательно)" %>
            </div>

            <div class="field" style="padding-top: 20px">
              <%= submit_tag "Сохранить изменения", class: "btn btn-lg btn-primary btn-block" %>
            </div>

        <% end %>
        <%= button_to "Удалить аккаунт", registration_path(resource_name),
                      data: {confirm: "Вы уверены? Восстановление аккаунта не возможно."},
                      method: :delete, class: "btn btn-lg btn-danger btn-block" %>

      </div>
    </div>
  </div>
</div>