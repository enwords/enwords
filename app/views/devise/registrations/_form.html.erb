<div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4 wrapper-registration">
  <h2 class="form-signin-heading">Регистрация</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <div class="col-xs-12 error">
        <%= devise_error_messages! %>
      </div>

      <div class="field">
        <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: "Почта" %>
      </div>

      <div class="field">
        <% if @minimum_password_length %>
            <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: "Пароль (минимум #{@minimum_password_length} символов)" %>
            <% else %>
            <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: "Пароль (минимум 6 символов)" %>
      <% end %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: "Повторите пароль" %>
      </div>

      <div class="field">
        <h5>Родной язык
          <p class="settings_ico"> <%= f.select :native_language, User.native_languages.keys
              .map { |native_language| [native_language.titleize, native_language] }, selected: :rus %></p></h5>
      </div>

      <div class="field">
        <h5>Изучаемый язык
          <p class="settings_ico"><%= f.select :learning_language, User.learning_languages.keys
              .map { |learning_language| [learning_language.titleize, learning_language] }, selected: :eng %></p></h5>
      </div>


      <div class="field" style="padding-top: 20px">
        <%= submit_tag "Регистрация", class: "btn btn-lg btn-primary btn-block" %>
      </div>

  <% end %>

  <%= link_to 'Войти', new_user_session_path %>
  <%=
    # render "devise/shared/links"
  %>
</div>
