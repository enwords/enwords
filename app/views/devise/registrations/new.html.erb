<div class="container">
  <div class="row row-content">
    <div class="col-xs-12">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3 wrapper">
        <h2 class="form-signin-heading">Регистрация</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

            <div class="col-xs-12 error">
              <p><%= devise_error_messages! %> </p>
            </div>

            <div class="field">
              <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: "Почта"  %>
            </div>

            <div class="field">
              <% if @minimum_password_length %>
                  <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: "Пароль (минимум #{@minimum_password_length} символов)" %>
              <% end %>
                  </div>

            <div class="field">
              <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: "Подтвердите пароль" %>
            </div>

            <div class="field" style="padding-top: 20px">
              <%= submit_tag "Регистрация", class: "btn btn-lg btn-primary btn-block" %>
            </div>

        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>