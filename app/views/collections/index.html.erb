<p id="notice"><%= notice %></p>

<h1>Word Collections</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @word_collections.each do |word_collection| %>
      <tr>
        <td><%= word_collection.user %></td>
        <td><%= link_to 'Show', word_collection %></td>
        <td><%= link_to 'Edit', edit_word_collection_path(word_collection) %></td>
        <td><%= link_to 'Destroy', word_collection, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Word Collection', new_word_collection_path %>
