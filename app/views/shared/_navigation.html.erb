                <li><%= link_to words_path status: 'all' do %>
                      <span class="fa fa-book item"></span>Все
                  <% end %>
                </li>

              </ul>
            </li>
            <li><%= link_to "Коллекции", collections_path %></li>
            <li><%= link_to "Последняя тренировка", training_path %></li>

          </ul>

          <ul class="nav navbar-nav navbar-right">
            <li class="search">
              <%= form_tag words_path, method: 'get' do %>
                  <%= text_field_tag :search, params[:search], placeholder: "Поиск слов" %>
                  <%= button_tag type: "submit", name: nil do %>
                      <span class="fa fa-search"></span>
                  <% end %>
              <% end %>
