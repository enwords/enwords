          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to new_user_registration_path do %>
                  Регистрация
              <% end %>
            </li>

            <li><%= link_to new_user_session_path do %>
                  <span class="fa fa-sign-in item"></span>Войти
